doctype html
html(lang="en")
	head
		title FlightGear MultiPlayer Map
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(rel="stylesheet",href="b/leaflet/dist/leaflet.css")
		link(rel="stylesheet",href="L.Grid.css")
		link(rel="stylesheet",href="mpmap.css")
		script(src="b/leaflet/dist/leaflet.js")
		script(src="L.Grid.js")
		script(src="L.ServerList.js")
		script(src="L.PilotList.js")
		script(src="L.Aircraft.js")
		script(src="L.MPAircraftLayer.js")
		script(src="b/jquery/dist/jquery.min.js")
		script(src="mpmap.js")
		style(type="text/css").
			html, body, #wrapper {
				width: 100%;
				height: 100%;
				border: 0;
				padding: 0;
				margin: 0;
			}
			.fg-pilot-list {
				clear: both;
			}
			.fg-pilot-list select {
				display: block;
				width: 100%;
				opacity: 0.6;
			}
			.fg-server-list select {
				text-align: left;
				-webkit-appearance: none;
				-moz-appearance: none;
				appearance: none;  /*IMPORTANT*/
				font-size: 90%;
				cursor: pointer;
				outline: none;
				opacity:0.6;
			}
			.fg-server-list select::-ms-expand {display: none;} /*FOR IE*/
			.fg-server-list select option {
				padding: 0.3em;
			}
			.fg-server-list select option[selected]{ font-weight:bold}
			.fg-server-list select option:nth-child(even) { background-color:#f5f5f5; }


	body
		div#map(style="width:100%;height:100%;")
